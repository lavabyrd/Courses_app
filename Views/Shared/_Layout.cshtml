<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Courses_app</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


    <!-- Custom styles for this template -->
<link href="https://v4-alpha.getbootstrap.com/examples/album/album.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light " style="background-color: #e3f2fd;">
  <a class="navbar-brand" asp-controller="Home" asp-action="Index">Course Central</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CourseList">List all Courses</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Form" asp-action="SignUp">SignUp</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQs</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Tips">Tips</a>
      </li>
    </ul>
    <span class="navbar-text">
      <a class="nav-link" asp-area="" asp-controller="Form" asp-action="AddYourCourse">Add a new Course</a></span>
    <span class="navbar-text">  <a class="nav-link" asp-area="" asp-controller="Form" asp-action="Contact"> Contact Us</a>
    </span>
  </div>
</nav>



        
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Courses Central</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
