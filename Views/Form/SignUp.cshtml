@model SignUpForm


@{
    ViewData["Title"] = "Sign Up!";
}
<h2>@ViewData["Title"]</h2>

<hr>

<form asp-action="SignUp" asp-controller="Form">
  <div class="form-group">
    <label asp-for="StudentName">Your Name</label>
    <input asp-for="StudentName" type="StudentName" class="form-control form-control-sm" id="StudentName" placeholder="John Doe" required="true">
  </div>
  <div class="form-group">
    <label asp-for="Course">Course</label>
    <input asp-for="Course" type="Course" class="form-control form-control-sm" id="Course" placeholder="CC112235-Intro to FilmMaking" required="true">
  </div>
  <div class="form-group">
    <label asp-for="Dates">Dates - dropdown</label>
    <textarea asp-for="Dates" class="form-control form-control-sm" id="Dates" rows="3" required="true"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="CourseLevel">Level</label>
    <select asp-for="CourseLevel" class="form-control form-control-sm" id="CourseLevel">
      <option>Beginner</option>
      <option>Intermediate</option>
      <option>Advanced</option>
    </select>
  </div>
  <div class="form-group">
    <label asp-for="Phone">Contact Phone Number</label>
    <input asp-for="Phone" type="Phone" class="form-control form-control-sm" id="Phone" placeholder="01-xxx3333">
  </div>
  <div class="form-group">
    <label asp-for="Email">Email Address</label>
    <input asp-for="Email" type="Email" class="form-control form-control-sm" id="Email" placeholder="Student@email.com">
  </div>
    

    
    <br>

    
  <div >
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
    
</form>


